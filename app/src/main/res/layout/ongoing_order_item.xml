<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardUseCompatPadding="true"
    card:cardCornerRadius="1dp"
    android:layout_margin="5dp"
    card:contentPadding="5dp"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout  android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5sp"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="10"
                android:gravity="center"
                android:id="@+id/ongoingTableNumber"
                android:textColor="@color/black"
                android:textSize="50sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:text="Table"
                android:gravity="center"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5sp"
            android:layout_weight="0.6">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="ORDER PLACED"
                android:gravity="left|center"
                android:id="@+id/ongoingOrderStatus"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_small"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="orderId"
                android:gravity="left|center"
                android:textColor="@color/black"
                android:id="@+id/ongoingOrderId"
                android:textSize="@dimen/title_text_extra_small"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Steward: N/A"
                android:id="@+id/ongoingSteward"
                android:gravity="left|center"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_extra_small"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal"
        android:id="@+id/addEditLayout"
        android:weightSum="1">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Add/Edit Order"
            android:id="@+id/ongoingEditButton"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimaryDark"
            android:textSize="@dimen/title_text_extra_small"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/ongoingRequestButton"
            android:text="Request For Bill"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimary"
            android:textSize="@dimen/title_text_extra_small"
            android:textAllCaps="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cashcardlayout"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="CASH"
                android:textColor="@color/colorAccent"
                android:id="@+id/ongoingCashButton"
                android:background="@color/colorPrimaryDark"
                android:textSize="@dimen/title_text_extra_small"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/ongoingCardButton"
                android:text="CARD"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/title_text_extra_small"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ongoingCancelButton"
            android:text="Cancel"
            android:textSize="@dimen/title_text_extra_small"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimary"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
    </android.support.v7.widget.CardView>