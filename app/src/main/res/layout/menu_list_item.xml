<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">
    <android.support.v7.widget.CardView
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="3dp"
        card_view:cardBackgroundColor="@color/colorAccent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150sp"
                        android:id="@+id/menuItemImg"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/menuItemPrice"
                        android:textColor="@color/colorAccent"
                        android:background="@color/colorPrimaryDark"
                        android:text="â‚¹000"
                        android:textSize="@dimen/title_text_small"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="top"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/title_text_small"
                        android:text="Tomato Soup"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="5sp"
                        android:gravity="left"
                        android:id="@+id/menuItemName"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/title_text_extra_small"
                        android:layout_marginTop="2sp"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:text="Tomato Soup Description"
                        android:singleLine="true"
                        android:id="@+id/menuItemDesc"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="5sp"
                        android:textSize="@dimen/title_text_extra_small"
                        android:id="@+id/menuItemAddButton"
                        android:text="Add Items"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:background="@drawable/button_style"/>
                    </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/subMenuSubLayout"
                android:visibility="visible"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center"
                android:layout_gravity="left">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="30dp"
                    android:text="-"
                    android:textSize="@dimen/title_text_medium"
                    android:id="@+id/menuItemRemoveQuantity"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/button_style"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="Qty"
                    android:textSize="@dimen/title_text_small"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/menuItemQty"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="30dp"
                    android:text="+"
                    android:textSize="@dimen/title_text_medium"
                    android:id="@+id/menuItemAddQuantity"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/button_style"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Remove"
                    android:id="@+id/menuItemRemoveButton"
                    android:textAllCaps="false"
                    android:textSize="@dimen/title_text_extra_small"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/button_style"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>