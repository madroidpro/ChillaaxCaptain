<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    card:cardUseCompatPadding="true"
    card:cardCornerRadius="1dp"
    android:layout_margin="5dp"
    card:contentPadding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="4">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="STATUS: ORDER PLACED"
            android:id="@+id/orderStatusText"
            android:layout_gravity="center"
            android:gravity="left"
            android:textSize="@dimen/title_text_medium"
            android:textColor="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginBottom="2dp"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="2 Items Added"
                android:textColor="@color/black"
                android:id="@+id/orderStatusItemCount"
                android:textSize="@dimen/title_text_extra_small"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Bill"
                android:id="@+id/orderStatusBill"
                android:textSize="@dimen/title_text_extra_small"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:weightSum="1"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Steward:"
                android:textColor="@color/black"
                android:id="@+id/orderStatusSteward"
                android:textSize="@dimen/title_text_extra_small"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textColor="@color/black"
                android:id="@+id/orderStatusId"
                android:textSize="@dimen/title_text_extra_small"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:weightSum="1"
        android:id="@+id/orderStatusImgLayout"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="100dp"
            android:id="@+id/oimg1"
            android:src="@mipmap/ic_launcher"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:id="@+id/oimg2"
            android:layout_height="100dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:id="@+id/oimg3"
            android:layout_height="100dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:id="@+id/oimg4"
            android:layout_height="100dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:id="@+id/oimg5"
            android:layout_height="100dp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/childViewLayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_extra_small"
            android:gravity="left"
            android:text="Ordered Items"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>